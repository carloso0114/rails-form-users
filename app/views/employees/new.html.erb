<%= simple_form_for @employee do |f| %>
  <%= f.input :name, label: 'Frist name'  %>
  <%= f.input :lastName, label: 'Last name' %>
  <%= f.association :location, label_method: :city%>
  <%= f.association :job, label_method: :position %>
  <%= f.button :submit, class: "btn btn-primary mt-4" %>
<% end %>
